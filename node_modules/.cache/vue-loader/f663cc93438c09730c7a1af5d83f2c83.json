erySelector(\"#show\");\n        let infoModal = document.querySelector(\"#infoModal\");\n        btn.addEventListener(\"click\", function () {\n            infoModal.showModal();\n        })\n        let close = document.querySelector(\"#close\");\n        close.addEventListener(\"click\", function () {\n            infoModal.close();\n        })\n    },\n\n}\n</script>\n\n<style scoped>\n.title_icon {\n    margin-top: -1rem;\n    height: var(--title_icon);\n}\n\n.layout {\n\n    background-color: var(--layout_background);\n margin-top:40px ;\n\n}\n\n\n\n.layout_grid {\n\n    width: 400px;\n    background-color: rgb(255, 255, 255);\n    margin-top:1rem;\n    margin-bottom:2rem;\n    border-radius: 10px;\n\n}\n\n\n.layout_grid_news img {\n    width: 100%;\n    height: 230px;\n    border-radius: 10px;\n}\n\n.layout_grid_news {}\n\n.layout_grid_news .grid_info h4 {\n    background-color: white;\n    overflow: hidden;\n    white-space: nowrap;\n    text-overflow: ellipsis;\n    display: -webkit-box;\n    -webkit-line-clamp: 2;\n    -webkit-box-orient: vertical;\n    white-space: normal;\n    max-height: 40px;\n    line-height: 2.3rem;\n    padding: 10px 1rem 25px;\n}\n\n.layout_grid_news .grid_info p {\n    margin: 0;\n    color: #161615;\n    background-color: white;\n}\n\n.layout_grid_news .grid_cover img {\n    width: 100%;\n   \n    background-color: white;\n}\n\n.layout_grid_news .grid_cover {\n    max-height: 400px;\n    overflow: hidden;\n    background-color: white;\n}\n\na {\n    color: black;\n    font-size: px;\n    line-height: 150%;\n}\n\n\np {\n    text-align: right;\n    padding-right: 1rem;\n}\n\nbutton {\n    margin-top: -10px;\npadding: 1rem 1rem;\n    font-size: 20px;\n    background-color: rgb(248, 216, 221);\n    border: transparent 1px solid;\n\n}\n\n.show {\n    display: none;\n}\n\n\n\n.title_text {\n    margin-top: 40px;\n    margin-bottom: -20px;\n    color: var(--title_color);\n    font-size: var(--font_title);\n\n}\n\n\ndialog {\n    border: none;\n    box-shadow: 0 2px 6px #ccc;\n    border-radius: 10px;\n\n    width: 80vw;\n    height: 90vh;\n}\n\n.close_btn {\n    color: rgb(13, 13, 13);\n    font-size: 30px;\n    background-color: transparent;\n    position: absolute;\n    top: 0;\n    right: 0;\n}\n</style>"]}]}