  window.addEventListener('scroll', () => {\n                this.moveBar('black')\n            })\n        },\n\n        moveBar(color = '#0984e3') {\n            let bar = document.querySelector('.progress')\n            let w = Math.ceil(\n                (Math.round(window.pageYOffset) / (document.body.scrollHeight - window.innerHeight)) * 100\n            )\n            bar.style.width = w + '%'\n            bar.style.background = color\n        },\n    },\n    mounted() {\n        this.scroll()\n        this.moveBar()\n    },\n}\n</script>\n\n<style scoped>\n.layout {\n    background-color: white;\n    position: fixed;\n    width: 100%;\n    box-shadow: 0px 2px 10px #1a1e30;\n}\n\n.layout_grid {\n    grid-template-columns: 9fr 1fr;\n    padding: 1rem;\n}\n\nh2 {\n    font-size: 1.8rem;\n    text-align: left;\n    cursor: pointer;\n    display: flex;\n    align-items: center;\n}\n\nh2 span {\n    padding: 0 1rem;\n}\n\nh2 img {\n    width: 32px;\n}\n\n/* 進度條 */\n.progress {\n    position: fixed;\n    bottom: 1px;\n    width: 0.5%;\n    height: 10px;\n    z-index: 999;\n}\n\n/* 漢堡選單 */\n.layout_grid div:nth-child(2) {\n    text-align: right;\n}\n\n.fa-bars {\n    font-size: 2rem;\n}\n</style>\n"]}]}